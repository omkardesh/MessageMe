<%= render 'shared/errors', obj: @user %>

<div class="column">
  <%= form_for(@user, :html => {class: "ui form", role: "form"}) do |f| %>
    <div class="field">
      <%= f.label :username %>
      <div class="ui left icon input">
        <%= f.text_field :username, class: "form-control", placeholder: "Username" %>  
        <i class="user icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :password %>
      <div class="ui left icon input">
        <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: "on" %>
        <i class="lock icon"></i>
      </div>
    </div>
    <%= f.button "Sign Up", class: "ui red submit button" %>
  <% end %>
</div>
